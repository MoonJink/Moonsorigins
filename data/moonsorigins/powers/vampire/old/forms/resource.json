{
  "type": "origins:multiple",
  "resource": {
    "type": "origins:resource",
    "min": 0,
    "max": 4,
    "hud_render": {
      "should_render": false,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
      "bar_index": 0
    },
    "start_value": 0
  },
  "size_reset": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "function moonsorigins:vampire/vampire_height_callback"
    },
    "condition": {
      "type": "origins:resource",
      "resource": "moonsorigins:vampire/forms/resource_resource",
      "comparison": "==",
      "compare_to": 0
    }
  },
  "reset": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "moonsorigins:vampire/forms/resource_resource",
      "change": 0,
      "operation": "set"
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "moonsorigins:vampire/forms/wolf_transformation_switch",
          "comparison": "<=",
          "compare_to": 400
        },
        {
          "type": "origins:resource",
          "resource": "moonsorigins:vampire/forms/rat_transformation_switch",
          "comparison": "<=",
          "compare_to": 400
        },
        {
          "type": "origins:resource",
          "resource": "moonsorigins:vampire/forms/whale_transformation_switch",
          "comparison": "<=",
          "compare_to": 400
        },
        {
          "type": "origins:resource",
          "resource": "moonsorigins:vampire/forms/alt_transformation_switch",
          "comparison": "<=",
          "compare_to": 400
        }
      ]
    }
  },
  "fake_cooldown_duration": {
    "type": "origins:cooldown",
    "cooldown": 200,
    "hud_render": {
      "should_render": true,
      "inverted": true,
      "sprite_location": "minecraft:textures/gui/moonpack_bars.png",
      "bar_index": 11
    }
  },
  "end_noise": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "playsound minecraft:block.respawn_anchor.deplete master @s ~ ~ ~"
    },
    "condition": {
      "type": "origins:resource",
      "resource": "moonsorigins:vampire/forms/resource_fake_cooldown_duration",
      "comparison": "==",
      "compare_to": 1
    }
  },

  "cancel_power_base": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "moonsorigins:vampire/forms/resource_resource",
          "change": 0,
          "operation": "set"
        },
        {
          "type": "origins:change_resource",
          "resource": "moonsorigins:vampire/forms/resource_fake_cooldown_duration",
          "change": 0,
          "operation": "set"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "moonsorigins:vampire/forms/resource_resource",
          "comparison": ">",
          "compare_to": 0
        },
        {
          "type": "origins:sneaking"
        }
      ]
    }
  },
  "hidden": true
}