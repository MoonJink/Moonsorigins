  "cooldown": 600,
  "hud_render": {
    "should_render": true,
    "sprite_location": "minecraft:textures/gui/moonpack_bars.png",
    "bar_index": 7
  },
  "key": {
    "key" : "key.origins.tertiary_active",
    "continuous": true
  },
  "entity_action": {
    "type": "origins:and",
    "actions": [
      {
        "type": "origins:area_of_effect",
        "radius": 5,
        "shape": "sphere",
        "bientity_action": {
          "type": "origins:target_action",
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:add_velocity",
                "z": -3,
                "y": 0.5,
                "space": "local",
                "set": true
              },
              {
                "type": "origins:apply_effect",
                "effects": [
                  {
                    "effect": "minecraft:blindness",
                    "duration": 200,
                    "is_ambient": true,
                    "show_particles": false,
                    "show_icon": true
                  },
                  {
                    "effect": "minecraft:nausea",
                    "duration": 200,
                    "amplifier": 0,
                    "is_ambient": true,
                    "show_particles": false,
                    "show_icon": true
                  },
                  {
                    "effect": "minecraft:slowness",
                    "duration": 200,
                    "amplifier": 1,
                    "is_ambient": true,
                    "show_particles": false,
                    "show_icon": true
